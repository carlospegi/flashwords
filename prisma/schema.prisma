// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Define el modelo Person
model Person {
  id       Int              @id @default(autoincrement())
  username String
  email    String           @unique
  password String
  words    Word[]
  sentence Sentence[]
  mining   SentenceMining[]
}

model Word {
  id        Int        @id @default(autoincrement())
  text1     String
  text2     String
  faceCard  Boolean
  box       Int
  nextView  DateTime?
  personId  Int
  person    Person     @relation(fields: [personId], references: [id])
  sentences Sentence[] // Relaci√≥n uno a muchos con Sentence
}

model Sentence {
  id       Int    @id @default(autoincrement())
  text     String
  wordId   Int
  personId Int
  person   Person @relation(fields: [personId], references: [id])
  word     Word   @relation(fields: [wordId], references: [id])
}

model SentenceMining {
  id       Int    @id @default(autoincrement())
  text1    String
  text2    String
  personId Int
  person   Person @relation(fields: [personId], references: [id])
}
